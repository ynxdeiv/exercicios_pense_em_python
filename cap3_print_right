# criar uma função que coloque o ultimo caracter da string na quadragésima coluna da tela

def print_right(text):
    tamanho_string = len(text)-1
    espaços_restantes =abs(40-tamanho_string)
    nova_palavra = espaços_restantes * ' ' + text
    print(nova_palavra)
    
print_right("Montly")
print_right("Python's")
print_right("Flying Circus")

